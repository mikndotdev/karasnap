generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Manufacturer {
  DAM
  JOYSOUND
  OTHER
}

enum RatingSystem {
  DAM_AI_HEART
  DAM_AI
  DAM_DXG
  JOYSOUND_MASTER
  JOYSOUND_AI
  OTHER
}

enum Plan {
  PREMIUM
  FREE
}

model User {
  id                String    @id
  name              String?
  avatarUrl         String?
  plan              Plan      @default(FREE)
  attempts          Attempt[]
  credits           Int       @default(25)
  profileHidden     Boolean   @default(true)
  autoShareAttempts Boolean   @default(false)
}

model Song {
  id        String    @id @default(cuid())
  title     String
  artist    String
  coverArt  String?
  spotifyId String?
  attempts  Attempt[]
}

model Attempt {
  id           String       @id @default(cuid())
  imageUrl     String
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  song         Song         @relation(fields: [songId], references: [id])
  songId       String
  score        Decimal
  bonus        Decimal?
  manufacturer Manufacturer
  ratingSystem RatingSystem @default(OTHER)
  createdAt    DateTime     @default(now())
  isShared     Boolean      @default(false)
}
